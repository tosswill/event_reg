

<%= form_tag sessions_path do %>
<fieldset>
<legend>Login</legend>
	<div class='clearfix'>
      <%= label_tag :login, "Username" %>
		<div class='input'>
  		  <%= text_field_tag :login, params[:login] %>
		</div>
	</div>
	<div class='clearfix'>
  	<%= label_tag :password %>
		<div class='input'>
  		<%= password_field_tag :password %>
		</div>
	</div>
	<div class='actions'>

		<%= link_to 'Cancel', root_url %>
		<input id="submit" name="commit" type="submit" value="Login" , class="btn primary">
	</div>
 </fieldset>

<% end %>
