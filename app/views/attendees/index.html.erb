<h1>Listing attendees</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Is speaker</th>
    <th>Ticket status</th>
    <th>Approval status</th>
    <th>Shirt size</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @attendees.each do |attendee| %>
  <tr>
    <td><%= attendee.email %></td>
    <td><%= attendee.is_speaker %></td>
    <td><%= attendee.ticket_status %></td>
    <td><%= attendee.approval_status %></td>
    <td><%= attendee.shirt_size %></td>
    <td><%= link_to 'Show', attendee %></td>
    <td><%= link_to 'Edit', edit_attendee_path(attendee) %></td>
    <td><%= link_to 'Destroy', attendee, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

